// ==UserScript==
// @name         tabulka
// @namespace    http://tampermonkey.net/
// @version      1.4
// @description  Automatizace rekrutu jednotek s ukládáním změn a možností vypnutí tlačítka rekrutace.
// @author       Wwwww
// @match        https://*/game.php?*screen=train*
// @grant        none
// @icon         https://dscs.innogamescdn.com/asset/07220f21/graphic/buildings/barracks.png
// ==/UserScript==

(function () {
    'use strict';

    // Přidání stylů pro tabulku
    const style = document.createElement('style');
    style.textContent = `
        #customScriptContainer {
            position: fixed;
            top: 50px;
            left: 20px;
            background: #f0f0f0;
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 2px 4px 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            font-family: Arial, sans-serif;
            width: 320px;
        }
        #customScriptContainer h2 {
            margin: 0;
            padding: 10px;
            background: #4CAF50;
            color: #fff;
            font-size: 16px;
            text-align: center;
            border-radius: 6px 6px 0 0;
        }
        #customScriptContainer label {
            display: block;
            margin-top: 10px;
            font-size: 14px;
            color: #333;
        }
        #customScriptContainer input[type="text"] {
            width: 80px;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
            text-align: center;
        }
        #customScriptContainer .checkbox-group {
            margin-top: 10px;
        }
        #customScriptContainer .checkbox-group label {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
        }
        #customScriptContainer .checkbox-group input {
            margin-right: 8px;
        }
        #customScriptContainer .column {
            display: inline-block;
            width: 45%;
            vertical-align: top;
        }
        #customScriptContainer button {
            margin-top: 15px;
            padding: 10px;
            width: 100%;
            background: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }
        #customScriptContainer button:hover {
            background: #45a049;
        }
    `;
    document.head.appendChild(style);

    // Funkce pro vytvoření tabulky
    function createTable() {
        const container = document.createElement('div');
        container.id = 'customScriptContainer';
        container.innerHTML = `
            <h2>Automatický rekrut</h2>
            <div class="column">
                <div class="checkbox-group">
                    <label><input type="checkbox" id="checkbox1"> Kopiník</label>
                    <input type="text" id="time1" placeholder="Čas (MM:SS)" maxlength="5">
                </div>
                <div class="checkbox-group">
                    <label><input type="checkbox" id="checkbox2"> Šermíř</label>
                    <input type="text" id="time2" placeholder="Čas (MM:SS)" maxlength="5">
                </div>
                <div class="checkbox-group">
                    <label><input type="checkbox" id="checkbox3"> Sekerník</label>
                    <input type="text" id="time3" placeholder="Čas (MM:SS)" maxlength="5">
                </div>
                <div class="checkbox-group">
                    <label><input type="checkbox" id="checkbox4"> Lučišník</label>
                    <input type="text" id="time4" placeholder="Čas (MM:SS)" maxlength="5">
                </div>
            </div>
            <div class="column">
                <div class="checkbox-group">
                    <label><input type="checkbox" id="checkbox5"> Špeh</label>
                    <input type="text" id="time5" placeholder="Čas (MM:SS)" maxlength="5">
                </div>
                <div class="checkbox-group">
                    <label><input type="checkbox" id="checkbox6"> Lučišník na koni</label>
                    <input type="text" id="time6" placeholder="Čas (MM:SS)" maxlength="5">
                </div>
                <div class="checkbox-group">
                    <label><input type="checkbox" id="checkbox7"> Beranidlo</label>
                    <input type="text" id="time7" placeholder="Čas (MM:SS)" maxlength="5">
                </div>
                <div class="checkbox-group">
                    <label><input type="checkbox" id="checkbox8"> Katapult</label>
                    <input type="text" id="time8" placeholder="Čas (MM:SS)" maxlength="5">
                </div>
                <div class="checkbox-group">
                    <label><input type="checkbox" id="checkbox9"> Lehká kavalerie</label>
                    <input type="text" id="time9" placeholder="Čas (MM:SS)" maxlength="5">
                </div>
            </div>
            <button id="recruitButton">Rekrutovat</button>
        `;
        document.body.appendChild(container);
    }

    // Funkce pro uložení stavu do localStorage
    function saveState() {
        const stateToSave = {
            recruitButtonState: document.getElementById('recruitButton').innerText === 'Rekrutace v procesu...',
        };

        for (let i = 1; i <= 9; i++) {
            stateToSave[`checkbox${i}`] = document.getElementById(`checkbox${i}`).checked;
            stateToSave[`time${i}`] = document.getElementById(`time${i}`).value;
        }

        localStorage.setItem('autoRecruitState', JSON.stringify(stateToSave));
    }

    // Funkce pro načtení stavu z localStorage
    function loadState() {
        const savedState = JSON.parse(localStorage.getItem('autoRecruitState'));
        if (savedState) {
            for (let i = 1; i <= 9; i++) {
                document.getElementById(`checkbox${i}`).checked = savedState[`checkbox${i}`] || false;
                document.getElementById(`time${i}`).value = savedState[`time${i}`] || '';
            }

            const recruitButton = document.getElementById('recruitButton');
            if (savedState.recruitButtonState) {
                recruitButton.innerText = 'Rekrutace v procesu...';
            } else {
                recruitButton.innerText = 'Rekrutovat';
            }
        }
    }

    // Vytvoření tabulky při načtení stránky
    if (!document.getElementById('customScriptContainer')) {
        createTable();
    }

    // Načtení stavu po načtení stránky
    loadState();

    // Události pro všechny checkboxy a textová pole
    for (let i = 1; i <= 9; i++) {
        document.getElementById(`checkbox${i}`).addEventListener('change', saveState);
        document.getElementById(`time${i}`).addEventListener('input', saveState);
    }

    // Obsluha tlačítka rekrutace
    document.getElementById('recruitButton').addEventListener('click', () => {
        const recruitButton = document.getElementById('recruitButton');
        if (recruitButton.innerText === 'Rekrutace v procesu...') {
            recruitButton.innerText = 'Rekrutovat'; // Ruční vypnutí
        } else {
            recruitButton.innerText = 'Rekrutace v procesu...';
        }
        saveState();
    });

    // Automatické obnovení stránky každých 30 minut (pokud je požadováno)
    setInterval(() => {
        location.reload();
    }, 30 * 60 * 1000); // 30 minut
})();
